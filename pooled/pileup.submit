universe = vanilla
executable = /opt/PepPrograms/RGAPipeline/samtools
arguments = "mpileup -B -q 20 -s -O -f /opt/data/mtuberculosis/MtbNCBIH37Rv.fa /opt/data/Brown_etal/bams/$(RUN).realn.bam > $(RUN)_Q20.pileup"

output = pileup_$(RUN).out
error = pileup_$(RUN).err
log = pileup_$(RUN).log

transfer_executable = FALSE
should_transfer_files = YES
when_to_transfer_output = ON_EXIT

request_cpus = 1
request_memory = 1GB
request_disk = 2GB

queue
