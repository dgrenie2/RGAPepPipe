universe = vanilla
executable = vcf_pilon.sh
arguments = "$(RUN) $(REF)"

output = vcf_pilon_$(RUN).out
error = vcf_pilon_$(RUN).err
log = vcf_pilon_$(RUN).log

should_transfer_files = YES
when_to_transfer_output = ON_EXIT
transfer_input_files = $(RUN).realn.bam, $(RUN).realn.bai

request_cpus = 4
request_memory = 2GB
request_disk = 2GB

queue

